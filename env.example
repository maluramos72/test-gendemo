# Copia este archivo como .env y escribe tus valores
# cp .env.example .env

# ── Required 
OPENAI_API_KEY=sk-...

# ── Settings
APP_NAME=test-generator
APP_VERSION=1.0.0
ENVIRONMENT=development          # development | staging | production
LOG_LEVEL=INFO                   # DEBUG | INFO | WARNING | ERROR

LLM_MODEL=gpt-4o-mini            # gpt-4o-mini (mejor modelo) | gpt-4o (no optimo)
LLM_TEMPERATURE=0.3              # 0.2 = deterministic structured output
LLM_MAX_TOKENS=2048              # No usar 1024 mayor de 2048 es mejor 
LLM_TOP_P=0.95                   # nucleus sampling; keeps low-prob tail out, helps with coherence

LLM_TIMEOUT_SECONDS=30           # tiempo de respuesta
LLM_MAX_RETRIES=2                # maximos retries
EXPECTED_TEST_CASES=3            # casos esperados 
